@model QuickBootstrap.Models.UserCreateRequest
@{
    ViewBag.Title = "添加用户";
}

<div class="row">

    <div class="col-md-2">
        @Html.Partial("Shared/_QuickMenu")
    </div>

    <div class="col-md-10 ">

        <ol class="breadcrumb">
            <li><a href="/">管理后台</a></li>
            <li><a href="/UserManage">用户</a></li>
            <li class="active">新建用户</li>
        </ol>

        <div class="container">

            @using (Html.BeginForm("create", "UserManage", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.UserName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", style = "width: 280px", placeholder="邮箱地址" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Nick, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.Nick, new { @class = "form-control", style = "width: 280px", placeholder = "账号昵称" })
                        @Html.ValidationMessageFor(model => model.Nick)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", style = "width: 280px", placeholder = "账号密码" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DepartmentId, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.DepartmentId, ViewBag.DepartmentList as SelectList, "请选择所属部门", new { @class = "form-control", style = "width:280px;" })
                        @Html.ValidationMessageFor(model => model.DepartmentId)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.RoleId, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.RoleId, ViewBag.RoleList as SelectList, "请选用户角色", new { @class = "form-control", style = "width:280px;" })
                        @Html.ValidationMessageFor(model => model.RoleId)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ValidationSummary(true)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary">创建</button>
                        <a href="/UserManage" class="btn btn-default">取消</a>
                    </div>
                </div>
            }

        </div>
    </div>
</div>

